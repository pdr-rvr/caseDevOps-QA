pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Start container') {
      steps {
        dir('caseGameClass') {
        echo 'Starting container from Docker Hub...'
        bat 'docker-compose -f docker-compose.staging.yml down -v' 
        bat 'docker-compose -f docker-compose.staging.yml pull'
        bat 'docker-compose -f docker-compose.staging.yml up -d'
        }
      }
    }

    stage('Run tests against the container') {
      steps {
        bat 'curl http://localhost:8686 || echo "Service not responding"'
      }
    }
  }

  post {
    always {
      echo 'Pipeline completed'
      // NÃ£o derruba mais o container aqui
    }
  }
}
